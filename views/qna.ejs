<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <script src="https://kit.fontawesome.com/1475b9bd11.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic&family=Noto+Sans+KR:wght@500;700&display=swap" rel="stylesheet">
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="favicon.ico?v=1.1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>Campus Compass</title>
        <style>
          body{
            padding-top:70px;
            font-family: 'Noto Sans KR';
            font-weight: regular;
          }
        </style>
    </head>
    <body>
        <%- include("header") %>
        <style>
        .cont{
            margin-top:15px;
            position: relative;
            height: 50px;
          }
          .search-bar{
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 30px;
            padding: 10px;
            height: 60px;
            width:80%;
            padding-right:60px;
            padding-left:20px;
            border-color : #b8b8b8;
          }
          .search-button{
            position:absolute;
            right:10%;
            transform: translateX(-20px);
            top:14px;
            width:32px;
            height:32px;
            border-width:0px;
            background-color:inherit;
          }
          .question_box{
              border: 1px solid #A50005;
              border-radius: 10px;
              padding: 15px;
              margin-top: 5px;
          }
          .text_box{
              margin-left: 5%;
              margin-right: 5%;
              left: 10%;
              margin-bottom: 50px;
          }
          @media screen and (max-width: 992px) {
            .search-bar{
              width:90%;
            }
            .search-button{
              right:5%;
              transform: translateX(-20px);
            }

          }
          @media screen and (min-width: 993px) {
            .search-bar{
              width:50%;
            }
            .search-button{
              right:25%;
            }
          }
        </style>
        <form action="search" method="get" class="cont search-form">
           <input type="text" class="search-bar form-control" name="query">
           <i class="search-button fas fa-search fa-2x"></i>
           <input type="submit" class="search-button" value="">
        </form>
        <br>
        <br>
        <div class="text_box">
            <h3 style="color:#A50005;">Q&A</h3>
            <br>

            <% content_qna.forEach(function(value){ %>
                <div class="question_box">
                    <a href="/qna-detail/<%= value.q_id %>"><%= value.q_question %></a>
                    <span class="reply_cnt" style="float: right;margin-top:-10px;">답변<br>&nbsp;&nbsp;<%= value.q_ans_cnt %></span>
                </div>
            <% }); %>
            <br>
        </div>
    </body>
</html>
