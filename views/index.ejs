<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <script src="https://kit.fontawesome.com/1475b9bd11.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic&family=Noto+Sans+KR:wght@500;700&display=swap" rel="stylesheet">
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="favicon.ico?v=1.1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>Campus Compass</title>
    </head>
    <body>
        <%- include("header") %>
        <style>
        .cont{
            margin-top:15px;
            position: relative;
            height: 50px;
          }
          .search-bar{
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 25px;
            padding: 10px;
            height: 50px;
            width:80%;
            padding-right:60px;
            padding-left:20px;
          }
          .search-button{
            position:absolute;
            right:10%;
            transform: translateX(-20px);
            top:8px;
            width:32px;
            height:32px;
            border-width:0px;
            background-color:inherit;
          }
          .category{
            text-align:center;
            line-height:50px;
            margin-left:5px;
            margin-right:5px;
            background-color:#A50005;
            color:white;
            font-size:14px;
            padding-left:2px;
            padding-right:2px;
            border-radius:15px;
            width: 20%;

          }
          .category_row{
            height:50px;
            margin-bottom:5px;
            margin-top:5px;
          }
          @media screen and (max-width: 992px) {
            .search-bar{
              width:90%;
            }
            .search-button{
              right:5%;
              transform: translateX(-20px);
            }

          }
          @media screen and (min-width: 993px) {
            .category_container{
              padding-left:10%;padding-right:10%;padding-top:10px;
            }
            .category{
              margin-left:15px;
              margin-right:15px;
              line-height:60px;
            }
            .category_row{
              margin-bottom:20px;
              margin-top:20px;
              height:60px;
            }

          }
        </style>
        <form action="search" method="get" class="cont search-form">
           <input type="text" class="search-bar border-dark" name="query">
           <i class="search-button fas fa-search fa-2x"></i>
           <input type="submit" class="search-button" value="">
        </form>

        <div class="container category_container">
          <div class="row justify-content-center category_row">
              <div class="col-2 category">
                휴학
              </div>
              <div class="col-2 category">
                졸업
              </div>
              <div class="col-2 category">
                취업
              </div>
              <div class="col-2 category">
                학점
              </div>
          </div>
          <div class="row justify-content-center category_row">
              <div class="col-2 category">
                봉사
              </div>
              <div class="col-2 category">
                교환학생
              </div>
              <div class="col-2 category">
                복수전공
              </div>
              <div class="col-2 category">
                출결
              </div>
          </div>
        </div>

        <div class="container">
          <div class="newq">
            <h2 style="color:#A50005;">최근질문</h2>
            <i class="fas fa-plus fa-2x" style="color:#A50005;"></i>
          </div>
          <div class="">

          </div>
          <div class="">

          </div>
          <div class="">

          </div>
        </div>




        <br>
        <% content_new_qna.forEach(function(value){ %>
            <a href="/qna-detail/<%= value.q_id %>"><%= value.q_question %></a>
        <% }); %>
        <br>
        Hello World
        <br>
        <% content_faq.forEach(function(value){ %>
            <a href="/faq-detail/<%= value.f_id %>"><%= value.f_question %></a>
        <% }); %>
        <br>
        Hello World
        <br>
        <% content_qna.forEach(function(value){ %>
            <a href="/qna-detail/<%= value.q_id %>"><%= value.q_question %></a>
        <% }); %>
    </body>
</html>
