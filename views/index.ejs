<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <script src="https://kit.fontawesome.com/1475b9bd11.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic&family=Noto+Sans+KR:wght@500;700&display=swap" rel="stylesheet">
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="favicon.ico?v=1.1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>Campus Compass</title>
        <style>
          body{
            padding-top:70px;
            font-family: 'Noto Sans KR';
            font-weight: regular;
          }
        </style>
    </head>
    <body>
        <%- include("header") %>
        <style>
        .cont{
            margin-top:15px;
            position: relative;
            height: 50px;
          }
          .search-bar{
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 30px;
            padding: 10px;
            height: 60px;
            width:80%;
            padding-right:60px;
            padding-left:20px;
            border-color : #b8b8b8;
          }
          .search-button{
            position:absolute;
            right:10%;
            transform: translateX(-20px);
            top:14px;
            width:32px;
            height:32px;
            border-width:0px;
            background-color:inherit;
          }
          .category{
            font-family: 'Noto Sans KR';
            text-align:center;
            line-height:50px;
            margin-left:5px;
            margin-right:5px;
            background-color:#A50005;
            color:white;
            font-size:15px;
            padding-left:2px;
            padding-right:2px;
            border-radius:15px;
            width: 20%;
            color:white !important;
            text-decoration:none;
          }
          .category_row{
            height:50px;
            margin-bottom:5px;
            margin-top:10px;
          }
          .category_container{
            margin-bottom:35px;
            margin-top:30px;
          }
          .main_content{
            margin-top:10px;
            margin-bottom:50px;
            padding-left: 7%;
            padding-right: 7%;
          }
          .menu_post{
            height:60px;
            line-height:56px;
            border-radius:15px;
            border:1px solid #A50005;
            padding-left:20px;
            padding-right:20px;
            margin-bottom: 7px;
          }
          .ellipsis{
            text-overflow: ellipsis;
          }
          p{
            width : 100%;
            overflow : hidden;
            white-space: nowrap;
          }
          .menu_quest{
            height:70px;
            line-height:70px;
            border-radius:15px;
            text-align:center;
            margin-bottom: 40px;
          }
          h3{
            color:#A50005;
            margin-left:1%;
            font-family: 'Noto Sans KR';
            font-weight: regular;
          }
          .plus-button{
            position:absolute;
            right:0px;
            transform: translateX(-20px);
            top:5px;
          }
          @media screen and (max-width: 992px) {
            .search-bar{
              width:90%;
            }
            .search-button{
              right:5%;
              transform: translateX(-20px);
            }
          }
          @media screen and (min-width: 993px) {
            h3{
              margin-left:20%;
            }
            .category_container{
              padding-left:10%;
              padding-right:10%;
              padding-top:10px;
            }
            .category{
              margin-left:15px;
              margin-right:15px;
              line-height:60px;
              font-size:20px;
            }
            .category_row{
              margin-bottom:20px;
              margin-top:20px;
              height:60px;
            }
            .search-bar{
              width:50%;
            }
            .search-button{
              right:25%;
            }
            .menu_post{
              margin-left : 20%;
              margin-right : 20%;
            }
            .ask-button{
              padding-left : 35%;
              padding-right : 35%;
            }
            .plus-button{
              right:20%;
              transform: translateX(-100%);
            }
            @media screen and (min-width: 1400px){
              .ask-button{
                padding-left : 30%;
                padding-right : 30%;
              }
            }
          }

        </style>
        <form action="/search" method="get" class="cont search-form">
           <input type="text" class="search-bar form-control" name="query">
           <i class="search-button fas fa-search fa-2x"></i>
           <input type="submit" class="search-button" value="">
        </form>

        <div class="container category_container">
          <div class="row justify-content-center category_row">
            <div class="col-2 category">
              <a href="/" class="category">휴학</a>
            </div>
            <div class="col-2 category">
              <a href="/" class="category">졸업</a>
            </div>
            <div class="col-2 category">
              <a href="/" class="category">취업</a>
            </div>
            <div class="col-2 category">
              <a href="/" class="category">학점</a>
            </div>
          </div>
          <div class="row justify-content-center category_row">
              <div class="col-2 category">
                <a href="/" class="category">봉사</a>
              </div>
              <div class="col-2 category">
                <a href="/" class="category">교환학생</a>
              </div>
              <div class="col-2 category">
                <a href="/" class="category">복수전공</a>
              </div>
              <div class="col-2 category">
                <a href="/" class="category">출결</a>
              </div>
          </div>
        </div>

        <div class="container main_content">
          <div style="position:relative;margin-bottom:20px;">
            <h3>최근질문</h3>
            <a href="/newqna" class="plus-button"><i class="fas fa-plus fa-1x" style="color:#A50005;"></i></a>
          </div>
          <% content_new_qna.forEach(function(value){ %>
              <a href="/qna-detail/<%= value.q_id %>" style="color:black !important;text-decoration:none;">
                <div class="menu_post">
                  <p class="ellipsis">
                  <%= value.q_question %>
                </p>
                </div>
              </a>
          <% }); %>
        </div>
        <div class="container main_content ask-button">
          <a  href="/write" style=" color:white !important;text-decoration:none;">
            <div class="menu_quest" style="background-color:#A50005; font-size:20px;">질문하기</div>
          </a>
        </div>

        <div class="container main_content">
          <div style="position:relative;margin-bottom:20px;">
            <h3>FAQ</h3>
            <a href="/faq" class="plus-button"><i class="fas fa-plus fa-1x" style="color:#A50005;"></i></a>
          </div>
          <% content_faq.forEach(function(value){ %>
            <a href="/faq-detail/<%= value.f_id %>" style="color:black !important;text-decoration:none;">
              <div class="menu_post">
                <p class="ellipsis">
                <%= value.f_question %>
              </p>
              </div>
            </a>
          <% }); %>
        </div>


        <div class="container main_content">
          <div style="position:relative;margin-bottom:20px;">
            <h3>Q&A</h3>
            <a href="/qna"class="plus-button"><i class="fas fa-plus fa-1x" style="color:#A50005;"></i></a>
          </div>
          <% content_qna.forEach(function(value){ %>
            <a href="/qna-detail/<%= value.q_id %>" style="color:black !important;text-decoration:none;">
              <div class="menu_post">
                  <p class="ellipsis">
                <%= value.q_question %>
              </p>
              </div>
            </a>
          <% }); %>
        </div>
        <%- include("footer") %>
    </body>
</html>
